<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/main_gray"
              android:orientation="vertical">

    <View
        android:id="@+id/item_pay_v"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_selector_item_white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_30px"
                android:text=""
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_28px"/>

            <TextView
                android:id="@+id/item_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_24px"
                android:layout_marginTop="@dimen/margin_18px"
                android:text=""
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_size_24px"/>
        </LinearLayout>

        <TextView
            android:id="@+id/item_add_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_20px"
            android:text="0.00元"
            android:textColor="@color/blue_theme"
            android:textSize="@dimen/text_size_30px"
            />

        <TextView
            android:id="@+id/item_reduce_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_20px"
            android:text="-2.00元"
            android:textColor="@color/orange_thme"
            android:textSize="@dimen/text_size_30px"
            android:visibility="gone"/>


    </RelativeLayout>


</LinearLayout>