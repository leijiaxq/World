<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="@color/white"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_blue_alf10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20px"
                android:layout_marginTop="@dimen/margin_30px"
                android:text=""
                android:textColor="@color/text_gray666"
                android:textSize="@dimen/text_size_26px"/>

            <TextView
                android:id="@+id/item_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_30px"
                android:layout_marginLeft="@dimen/margin_20px"
                android:layout_marginTop="@dimen/margin_20px"
                android:text=""
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_size_24px"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_right_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_20px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_2px"
                android:text="+"
                android:textColor="@color/blue_theme"
                android:textSize="@dimen/text_size_30px"/>

            <TextView
                android:id="@+id/item_money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/blue_theme"
                android:textSize="@dimen/text_size_30px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_2px"
                android:text="å…ƒ"
                android:textColor="@color/blue_theme"
                android:textSize="@dimen/text_size_24px"/>
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
