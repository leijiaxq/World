<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main_gray"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include layout="@layout/tab"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="316px"
        android:background="@drawable/bg_tixianchenggong"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="70px"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/apply_result_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ico_chenggong"/>

            <TextView
                android:id="@+id/apply_result_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_30px"
                android:text="提现申请成功"
                android:textColor="@color/white"
                android:textSize="@dimen/margin_32px"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_20px"
        android:background="@drawable/bg_tixianxiangqing"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_40px"
            android:layout_marginTop="@dimen/margin_40px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现金额："
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_28px"/>

            <TextView
                android:id="@+id/cash_used_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_30px"
                android:text="¥ 20.00"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_28px"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_40px"
            android:layout_marginTop="@dimen/margin_30px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余金额："
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_28px"/>

            <TextView
                android:id="@+id/cash_surplus_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_30px"
                android:text="¥ 120.00"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_30px"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/margin_30px"
            android:layout_marginRight="@dimen/margin_30px"
            android:layout_marginTop="@dimen/margin_42px"
            android:background="@color/line_gray"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_40px"
            android:layout_marginTop="@dimen/margin_30px"
            android:text="【提示】"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_26px"/>

        <TextView
            android:id="@+id/result_hint_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_24px"
            android:layout_marginRight="@dimen/margin_24px"
            android:layout_marginTop="@dimen/margin_28px"
            android:lineSpacingExtra="@dimen/margin_16px"
            android:text="你的提现申请已提交成功，现金将在5个工作日内发放到您的微信钱包！"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_26px"/>

    </LinearLayout>

    <Button
        android:id="@+id/confirm_btn"
        android:layout_width="618px"
        android:layout_height="96px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150px"
        android:background="@drawable/selecter_blue_btn"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_32px"/>


</LinearLayout>