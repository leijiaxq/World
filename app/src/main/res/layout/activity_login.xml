<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <ImageView
        android:layout_width="244px"
        android:layout_height="278px"
        android:layout_marginTop="220px"
        android:src="@drawable/logo"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="62px"
        android:layout_marginRight="62px"
        android:layout_marginTop="260px"
        android:src="@drawable/fengexian_logo"/>

    <ImageView
        android:id="@+id/weixin_iv"
        android:layout_width="160px"
        android:layout_height="160px"
        android:layout_marginTop="@dimen/margin_20px"
        android:padding="@dimen/margin_20px"
        android:src="@drawable/ico_weixin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用微信账号登录"
        android:textColor="@color/text_gray666"
        android:textSize="@dimen/text_size_30px"/>

</LinearLayout>