<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main_gray"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include layout="@layout/tab"/>

    <RelativeLayout
        android:id="@+id/cash_select_layout"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="@drawable/ripple_selector_item_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/margin_20px"
            android:text="提现金额"
            android:textColor="@color/text_gray666"
            android:textSize="@dimen/text_size_30px"/>

        <TextView
            android:id="@+id/cash_select_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/margin_20px"
            android:drawableRight="@drawable/ico_more"
            android:paddingRight="@dimen/margin_20px"
            android:text="请选择"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_26px"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/margin_20px"
        android:layout_marginRight="@dimen/margin_20px"
        android:background="@drawable/fengexian_logo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@drawable/ripple_selector_item_white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/margin_20px"
            android:text="可提现金额:"
            android:textColor="@color/text_gray666"
            android:textSize="@dimen/text_size_30px"/>

        <TextView
            android:id="@+id/cash_total_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/margin_20px"
            android:text="0.00"
            android:textColor="@color/text_gray666"
            android:textSize="@dimen/text_size_30px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/margin_2px"
            android:text="元"
            android:textColor="@color/text_gray666"
            android:textSize="@dimen/text_size_24px"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/hint_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20px"
            android:layout_marginTop="@dimen/margin_20px"
            android:text="双休日及节假日不处理提现业务;"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_26px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hint_tv"
            android:layout_marginLeft="@dimen/margin_20px"
            android:layout_marginTop="@dimen/margin_18px"
            android:text="预计到账时间为5个工作日"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_26px"/>


        <Button
            android:id="@+id/next_btn"
            android:layout_width="618px"
            android:layout_height="96px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="316px"
            android:background="@drawable/selecter_blue_btn"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_32px"/>


    </RelativeLayout>

</LinearLayout>