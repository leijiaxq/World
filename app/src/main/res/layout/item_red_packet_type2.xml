<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/main_gray"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="@color/main_gray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:layout_marginLeft="@dimen/margin_20px"
        android:layout_marginRight="@dimen/margin_20px"
        android:background="@drawable/ripple_selector_item_white">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_icon_iv"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_20px"
            android:src="@drawable/default_picture"/>

        <ImageView
            android:id="@+id/item_huangguan_iv"
            android:layout_width="42px"
            android:layout_height="42px"
            android:layout_marginLeft="2px"
            android:layout_marginTop="11px"
            android:src="@drawable/ico_huangguan"/>


        <ImageView
            android:id="@+id/item_xing_iv"
            android:layout_width="42px"
            android:layout_height="42px"
            android:layout_marginLeft="9px"
            android:layout_marginTop="9px"
            android:src="@drawable/ico_xingxing"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_34px"
            android:layout_toRightOf="@+id/item_icon_iv"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="46px"
                android:text=""
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_28px"/>


            <TextView
                android:id="@+id/item_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_18px"
                android:text=""
                android:textColor="@color/text_gray"

                android:textSize="@dimen/text_size_24px"/>


        </LinearLayout>

        <TextView
            android:id="@+id/item_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_20px"
            android:text=""
            android:textColor="@color/blue_theme"
            android:textSize="@dimen/text_size_30px"/>

        <TextView
            android:id="@+id/item_best_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/item_money_tv"
            android:layout_marginRight="@dimen/margin_20px"
            android:layout_marginTop="@dimen/margin_18px"
            android:text="手气最佳"
            android:textColor="@color/orange_thme"
            android:textSize="@dimen/text_size_24px"/>


    </RelativeLayout>

</LinearLayout>