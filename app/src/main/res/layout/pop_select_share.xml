<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_share_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pop_share_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_selector_item_white"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_30px"
            android:paddingTop="@dimen/margin_30px"
            android:text="分享给朋友"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_36px"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_gray"/>

        <TextView
            android:id="@+id/pop_share_friends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_selector_item_white"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_30px"
            android:paddingTop="@dimen/margin_30px"
            android:text="分享到朋友圈"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_36px"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_gray"/>

        <TextView
            android:id="@+id/pop_share_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_selector_item_white"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_30px"
            android:paddingTop="@dimen/margin_30px"
            android:text="取消"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_36px"/>


    </LinearLayout>


</LinearLayout>